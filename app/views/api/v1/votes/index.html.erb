<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>Upvote</th>
      <th>Votable</th>
      <th>Votable type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.upvote %></td>
        <td><%= vote.votable_id %></td>
        <td><%= vote.votable_type %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_api_v1_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


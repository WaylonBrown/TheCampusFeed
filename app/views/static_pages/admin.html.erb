<html>
  <body ng-app="cfeed">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">College Feed</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown active">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">Control Panel</a></li>
                <li><a href="#">Stat Panel</a></li>
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Admin<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="#">My Posts</a></li>
                <li><a href="#">My Comments</a></li>
                <li class="divider"></li>
                <li><a href="#">Log Out</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
      <h1>Control Panel</h1>
      <div class="col-med-12" ng-controller="SectionController">
        <accordion close-others="oneAtATime">

          <div ng-include ng-controller="PostSectionController" ng-repeat="section in sections" src="section.template" is-open="section.isOpen">
          </div>

        </accordion>
      </div>
    </div>

    <script type="text/ng-template" id="fragments/admin_posts.html">
      <accordion-group >
        <accordion-heading>
          Posts
          <%= fa_icon 'refresh', class: 'pull-right tip', 
            'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 
            title: 'refresh', 'hasTooltip' => '' %>
        </accordion-heading>

        <form class="" role="search" ng-submit="">
          <div class="form-group">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search" ng-model="searchText" ng-change="updateTotalAndPopulate()">
              <div class="input-group-btn">
                <button type="submit" class="btn btn-default" ng>
                  <%= fa_icon 'search' %>
                </button>
              </div>
            </div>
          </div>
        </form>

        <div ng-hide="posts.length > 0">Loading...</div>
        <accordion close-others="oneAtATime">
          <accordion-group ng-repeat="post in posts" ng-mouseenter="post.isOpen = true" ng-mouseleave="post.isOpen = false" is-open="post.isOpen">
            <accordion-heading>
              {{post.text}}
              <%= fa_icon 'trash-o', class: 'pull-right tip', 
                'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 
                title: 'delete', 'hasTooltip' => '' %>
              <%= fa_icon 'edit', class: 'pull-right tip', 
                'data-toggle' => 'tooltip', 'data-placement' => 'bottom', 
                title: 'edit', 'hasTooltip' => '' %>
            </accordion-heading>
            <div class="row">
              <div class="col-md-3" ng-repeat="(key,value) in post">
                <b>{{key}}:</b> <u class="pull-right">{{value}}</u>
              </div>
            </div>
          </accordion-group>
        </accordion>
        <pagination total-items="total" ng-model="pageNo" items-per-page="perPage"
            max-size="10" class="pagination" boundary-links="true"
            ng-change="populatePosts()"></pagination>
      </accordion-group>
    </script>
  </body>
</html>

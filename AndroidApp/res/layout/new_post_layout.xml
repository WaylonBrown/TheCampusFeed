<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/newPostTitle"
        android:text="New Post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp" 
        android:textColor="@color/lightblue"
        android:layout_marginTop="6dp"
        android:gravity="center_horizontal"
        />
    
    <!-- custom so that it cant do a carriage return -->
    <com.appuccino.collegefeed.extra.MyEditText
        android:id="@+id/newPostMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:layout_marginBottom="0dp"
        android:textSize="22sp"		android:inputType="textMultiLine"
		android:maxLength="100"
        /> 
    
    <TextView
        android:id="@+id/newPostTagsText"
        android:text="Tags: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:visibility="gone"
        />

</LinearLayout>
